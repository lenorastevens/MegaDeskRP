@page
@model MegaDeskRP.Pages.Desks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Desk Quote Details</h1>

<p>
    <a asp-page="Create">Add New Desk</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].Depth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].NumOfDrawers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].SurfaceMaterials)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].QuoteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].RushDays)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Desk) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Depth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfDrawers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurfaceMaterials)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuoteDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RushDays)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
